{
  "name": "metta-lsp-client",
  "version": "0.1.0",
  "description": "VS Code extension for MeTTa language with Language Server support",
  "author": "",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0",
    "node": ">=18.0.0"
  },
  "main": "out/extension.js",
  "activationEvents": [
    "onLanguage:metta",
    "onCommand:metta.restartServer"
  ],
  "contributes": {
    "languages": [
      {
        "id": "metta",
        "aliases": ["MeTTa", "metta"],
        "extensions": [".metta", ".scm"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "metta",
        "scopeName": "source.metta",
        "path": "./syntaxes/metta.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "metta.restartServer",
        "title": "Restart MeTTa Language Server",
        "category": "MeTTa"
      }
    ],
    "configuration": {
      "title": "MeTTa Language Server",
      "properties": {
        "metta.server.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for the language server"
        },
        "metta.server.trace": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Trace level for language server communication"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "vscode:prepublish": "npm run build",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.15.0"
  }
}
